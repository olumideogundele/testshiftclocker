<widget xmlns = "http://www.w3.org/ns/widgets"
	xmlns:gap = "http://phonegap.com/ns/1.0"
	id        = "com.binarysoft.emumap"
	versionCode="2"
	version   = "2.0">
	<preference name="phonegap-version" value="cli-6.5.0"/>

    <gap:plugin name="cordova-plugin-whitelist" source="npm" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <gap:platform name="ios" />
    <gap:platform name="android" />
    <gap:platform name="winphone" />
	
    <name>SHIFTCLOCKER INCORPORATED</name>
    <description>Punch in made easy</description>
    <author href="http://www.online.shiftclocker.com" email="info@shiftclocker.com">Olumide Francis</author>
    <!--<content src="index.html" />-->
    <preference name="permissions" value="none" />
	<preference name="android-build-tool" value="gradle" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="false" />
    <preference name="disallowOverscroll" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
	<preference name="ErrorUrl" value="error.html" />

	<preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="10" />
    <preference name="android-targetSdkVersion" value="19" />
    <preference name="android-installLocation" value="auto" />
<!--	<gap:plugin name="de.appplant.cordova.plugin.badge" source="npm" />-->
	 
	<plugin name="cordova-plugin-badge" spec="0.7.2" source="npm" /> 
   
 
    <gap:plugin name="org.apache.cordova.console" source="npm" />
 
    <gap:plugin name="org.apache.cordova.device" source="npm" />
    <gap:plugin name="org.apache.cordova.device-motion" source="npm"/>
    <gap:plugin name="org.apache.cordova.device-orientation" source="npm"/>
    <gap:plugin name="org.apache.cordova.dialogs" source="npm"/>
    <gap:plugin name="org.apache.cordova.file" source="npm"/>
    <gap:plugin name="org.apache.cordova.file-transfer" source="npm"/>
    <gap:plugin name="org.apache.cordova.globalization" source="npm"/>
    <gap:plugin name="org.apache.cordova.inappbrowser" source="npm"/>
    <gap:plugin name="org.apache.cordova.media" source="npm"/>
    <gap:plugin name="org.apache.cordova.network-information" source="npm"/>
 
	 
    <access origin="*" />
 


    <!-- iPhone / iPod Touch  - lower 4s -->
    <icon src="images/AppIcon/Icon-App-57x57@1x.png" gap:platform="ios" width="57" height="57" />
    <icon src="images/144x144.png" gap:platform="ios" width="114" height="114" />
    <icon src="images/AppIcon/Icon-App-72x72@1x.png" gap:platform="ios" width="72" height="72" />

    <!-- iPhone / iPod Touch - 5-5s -->
    <icon src="images/60X60.png" gap:platform="ios" width="60" height="60" />
    <icon src="images/120X120.png" gap:platform="ios" width="120" height="120" />
    <!-- iPhone6-6+ -->
    <icon src="images/180X180.png" gap:platform="ios" width="180" height="180" />

    <!-- Settings Icon -->
    <icon src="images/AppIcon/Icon-App-29x29@1x.png" gap:platform="ios" width="29" height="29" />
    <icon src="images/AppIcon/Icon-App-57x57@1x.png" gap:platform="ios" width="58" height="58" />

    <!-- Spotlight Icon -->
    <icon src="images/AppIcon/Icon-App-40x40@1x.png" gap:platform="ios" width="40" height="40" />
    <icon src="images/Icon-App-83.5x83.5@2x.png" gap:platform="ios" width="80" height="80" />
	
	
	 
	
	
	<icon src="images/36x36.png" gap:platform="android" gap:density="ldpi" />
	<icon src="images/48x48.png" gap:platform="android" gap:density="mdpi" />
	<icon src="images/72x72.png" gap:platform="android" gap:density="hdpi" />
	<icon src="images/92x92.png" gap:platform="android" gap:density="xhdpi" />
	<icon src="images/144x144.png" gap:platform="android" gap:density="xxhdpi" />
 
	
	

    <plugin name="cordova-plugin-whitelist" version="1" source="npm"/>

    <gap:plugin name="org.apache.cordova.device" version="0.2.3" source="npm"/>
    <gap:plugin name="cordova-plugin-geolocation" source="npm"/>
	 
		<feature name="http://api.phonegap.com/1.0/file" />
		<feature name="http://api.phonegap.com/1.0/geolocation" />
		<feature name="http://api.phonegap.com/1.0/media" />
		<feature name="http://api.phonegap.com/1.0/network" />
		<feature name="http://api.phonegap.com/1.0/notification" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
